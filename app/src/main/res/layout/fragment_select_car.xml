    <!-- Hàng FAB thao tác trực tiếp (KHÔNG dùng dialog nữa) -->
    <LinearLayout
        android:id="@+id/fabRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Biển số -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPlate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                app:fabCustomSize="80dp"
                app:maxImageSize="60dp"
                app:backgroundTint="@color/primaryColor"
                app:tint="@android:color/white"
                android:contentDescription="Chụp biển số"
                app:srcCompat="@drawable/baseline_directions_car_24"
                app:elevation="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plate_hint"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Odo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabOdo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                app:fabCustomSize="80dp"
                app:maxImageSize="60dp"
                app:backgroundTint="@color/primaryColor"
                app:tint="@android:color/white"
                android:contentDescription="Chụp Odo"
                app:srcCompat="@drawable/baseline_speed_24"
                app:elevation="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odo_hint"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>


