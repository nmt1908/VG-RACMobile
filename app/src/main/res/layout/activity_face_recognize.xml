<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- App Title Bar -->
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#AADEDADA"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/face_recognition"
            android:textSize="60dp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Face overlay -->
    <com.vg.restrictacesscontrol.overlay.FaceGraphicOverlay
        android:id="@+id/graphicOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- User Info Panel (overlay, bottom) -->
    <LinearLayout
        android:id="@+id/userInfoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/bg_user_info_panel"
        android:visibility="gone"
        android:elevation="8dp"
        android:gravity="center">

        <!-- Loading -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/loadingSpinner"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recognizing..."
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Alert message -->
        <TextView
            android:id="@+id/labelAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="40sp"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:gravity="center" />


        <!-- Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/labelUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginStart="30dp" />
        </LinearLayout>

        <!-- Card ID Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/labelUserCardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/userCardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>

        <!-- Similarity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserSimilarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similarity:"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/userSimilarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98.75%"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:maxImageSize="60dp"
        app:fabCustomSize="80dp"
        app:backgroundTint="@color/green_success"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/baseline_check_circle_24"/>



</FrameLayout>

